@model CuckooStore.Models.User
@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/wwwrt/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/wwwrt/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/wwwrt/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/wwwrt/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/wwwrt/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/wwwrt/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/wwwrt/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/wwwrt/css/main.css">
    <style>
        .p-b-140 {
            padding-bottom: 0px;
        }

        .wrap-login100 {
            padding: 100px 130px 100px 100px;
        }
    </style>
</head>
<body>
    <div class="wrap-login100" style="margin-left: 500px">
        <form class="login100-form validate-form " action="/HomeAdmin/Login" method="post">
            <span class="login100-form-title" style="font-family:Arial">
                <strong>
                    Đăng nhập
                </strong>
            </span>

            <div class="wrap-input100 validate-input" data-validate="Cần nhập đúng định dạng (ví dụ: Abc@gmail.com)!">
                <input class="input100" type="text" name="email" placeholder="Email">
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
            </div>
            <div class="wrap-input100 validate-input" data-validate="Cần nhập mật khẩu">
                <input class="input100" type="password" name="pass" placeholder="Mật khẩu">
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </span>
            </div>

            <div class="container-login100-form-btn">
                <button class="login100-form-btn">
                    Đăng Nhập
                </button>
            </div>
            @if (ViewBag.Error != null)
            {
                <br />
                <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
            }
        </form>
    </div>
    <script src="~/wwwrt/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/wwwrt/vendor/bootstrap/js/popper.js"></script>
    <script src="~/wwwrt/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/wwwrt/vendor/select2/select2.min.js"></script>
    <script src="~/wwwrt/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="~/wwwrt/js/main.js"></script>
</body>
</html>
<p>@ViewBag.error</p>
