@model IEnumerable<CuckooStore.Models.Category>
<footer class="bg3 p-t-75 p-b-32">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-lg-4 p-b-50">
                <h4 class="stext-301 cl0 p-b-30">
                    Danh Mục
                </h4>
                <ul>
                    @foreach (var item in Model)
                    {
                    <li class="p-b-10">
                        <a href="@Url.Action("Index", "Home", new { id = item.CategoryID })" class="stext-107 cl7 hov-cl1 trans-04">
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </a>
                    </li>
                    }
                </ul>
            </div>
            <div class="col-sm-6 col-lg-4 p-b-50">
                <h4 class="stext-301 cl0 p-b-30">
                    Thông tin Thêm
                </h4>
                <ul>
                    <li class="p-b-10">
                        <a href="@Url.Action("Index","Home")" class="stext-107 cl7 hov-cl1 trans-04">
                            Trang chủ
                        </a>
                    </li>
                    <li class="p-b-10">
                        @if (Session["iduser"] != null)
                        {
                            <a href="@Url.Action("Edit","Home",new { id = Session["iduser"]})" class="stext-107 cl7 hov-cl1 trans-04">
                                Tài Khoản
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login","Home")" class="stext-107 cl7 hov-cl1 trans-04">
                                Tài Khoản
                            </a>
                        }
                    </li>
                    <li class="p-b-10">
                        <a href="@Url.Action("About","Home")" class="stext-107 cl7 hov-cl1 trans-04">
                            Về Chúng Tôi
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-6 col-lg-4 p-b-50">
                <h4 class="stext-301 cl0 p-b-30">
                    Địa Chỉ - Liên Hệ
                </h4>
